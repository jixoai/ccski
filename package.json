{
  "name": "ccski",
  "version": "2.0.1",
  "description": "Claude Code Skills Manager - CLI and MCP interface for managing skills across AI agents",
  "type": "module",
  "bin": {
    "ccski": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "npm": "pnpm build && pnpm pub",
    "pub": "pnpm publish --access publish --no-git-checks",
    "build": "tsdown",
    "ccski": "bun src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ts": "tsc --noEmit",
    "lint": "echo 'Linting not configured yet'",
    "fmt": "prettier --write ."
  },
  "keywords": [
    "claude-code",
    "codex",
    "skills",
    "mcp",
    "ai-agent",
    "cli"
  ],
  "author": "jixoai-labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jixoai-labs/ccski.git"
  },
  "bugs": {
    "url": "https://github.com/jixoai-labs/ccski/issues"
  },
  "homepage": "https://github.com/jixoai-labs/ccski#readme",
  "dependencies": {
    "debug": "^4.3.7"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@inquirer/prompts": "^7.3.1",
    "@inquirer/core": "^10.3.2",
    "@inquirer/figures": "^1.0.0",
    "@leeoniya/ufuzzy": "^1.0.18",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/node": "^22.10.2",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^2.1.8",
    "colorette": "^2.0.20",
    "gray-matter": "^4.0.3",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "string-width": "^7.2.0",
    "ts-pattern": "^5.5.0",
    "tsdown": "^0.16.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "yargs": "^17.7.2",
    "zod": "^3.24.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
